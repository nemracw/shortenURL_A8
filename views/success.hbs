
<div class="row justify-content-center">
  <div class="col-7 text-start">
    <h2>Success! Please use this link:</h2>
    <a href="{{{originalUrl}}}">
      <h4 id="shortUrl" name="shortUrl">{{shortUrl}}</h4>
    </a>
  </div>
  <div class="col-7 text-center mt-3">
  <button class="btn btn-primary" type="submit" style="width:120px;" 
          onclick="copy()">Copy</button>
  </div>
</div>

<script>
    function copy() {
      const URL = document.getElementById("shortUrl")
      navigator.clipboard.writeText(URL.innerText)
        .then(() => alert('Copied : ' + URL.innerText))
        .catch(error => console.log(error))
    }
</script>